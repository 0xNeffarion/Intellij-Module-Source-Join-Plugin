<idea-plugin>
    <id>com.github.xneffarion.intellijmodulesourcejoinplugin</id>
    <name>Module Source Join</name>
    <vendor url="https://github.com/0xNeffarion/Intellij-Module-Source-Join-Plugin" email="main@neffware.com">0xNeffarion</vendor>

    <description>Joins all modules source code into a single folder within the project workspace</description>

    <change-notes>Plugin.xml info update</change-notes>
    <version>0.1.0</version>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij"/>

    <applicationListeners/>

    <actions>
        <action id="com.github.xneffarion.intellijmodulesourcejoinplugin.services.JoinModuleSourcesAction"
                class="com.github.xneffarion.intellijmodulesourcejoinplugin.services.JoinModuleSourcesAction" text="Join Module Sources"
                description="Join sources from all modules">
            <override-text place="ToolsMenu" text="Join Action"/>
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
